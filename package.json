{
  "name": "@sdwvit/s2mods",
  "version": "1.0.0",
  "description": "Get Stalker 2 game data from ObjPrototypes",
  "type": "module",
  "scripts": {
    "prepare-configs": "node ./src/prepare-configs.mts",
    "pack-inject": "node ./src/pack-inject.mts",
    "cook-inject": "node ./src/cook-inject.mts",
    "publish-steam": "node ./src/publish-steam.mts",
    "publish-modio": "node ./src/publish-modio.mts",
    "update-readme": "node ./src/update-readme.mts",
    "repack-republish-all": "node src/cook-inject-all.ts",
    "push-to-sdk": "node ./src/push-to-sdk.mts",
    "pull-staged": "node ./src/pull-staged.mts",
    "pull-assets": "node ./src/pull-assets.mts",
    "purge-caches": "find . -path '*/node_modules' -prune -o -type f -name '.*.cache.zlib' -exec rm -f {} +",
    "create-git-branches": "node src/create-git-branches.mts"
  },
  "devDependencies": {
    "@node-steam/vdf": "^2.2.0",
    "@types/archiver": "^7.0.0",
    "@types/node": "^20.11.17",
    "archiver": "^7.0.1",
    "dotenv": "^17.2.0",
    "prettier": "^3.6.2",
    "s2cfgtojson": "4.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
